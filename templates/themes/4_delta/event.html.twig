{% extends 'themes/4_delta/base.html.twig' %}

{% block body %}
<div class="col-12 col-md-8">

    <h1 class="mt-4 mb-3">{{ event.title }}</h1>

    <div class="mb-4">
        <p><strong>Dátum:</strong> {{ event.startAt|date('Y.m.d. H:i') }}</p>
        <p><strong>Helyszín:</strong> {{ event.location }}</p>
        <hr>
        {{ event.description|raw }}
    </div>
</div>
{% endblock %}
