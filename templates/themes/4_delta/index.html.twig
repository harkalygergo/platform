{% extends 'themes/4_delta/base.html.twig' %}

{% block navigation %}
    {% for menu in menus %}
        <li class="nav-item">
            <a class="nav-link" aria-current="page" href="{{ menu.slug }}">{{ menu.title }}</a>
        </li>
    {% endfor %}
{% endblock %}

{% block body %}

    <!-- get events where website id is equal to website.id and startAt is greater than or equal to now order by startAt ascending limit 5 -->

    <div class="col-12">

        <h1>{{ title|raw }}</h1>

        {% if events is defined %}
            <h2 class="mt-5">Következő események</h2>

            {% for event in events %}
                <div class="row p-1 mb-3 bg-white border rounded shadow-sm align-items-center">
                    <div class="col-md-2 text-center event-date">
                        <div class="event-day">{{ event.startAt|date('Y.m.d.') }}</div>
                        <div class="event-time">{{ event.startAt|date('H:i') }}</div>
                    </div>
                    <div class="col-8">
                        <h5>{{ event.title }}</h5>
                        <p class="mb-1 text-muted">
                            <strong>Helyszín:</strong> {{ event.location }}
                        </p>
                        {{ event.description|raw }}
                    </div>
                    <div class="col-2">
                        <a href="{{ event.slug }}" class="btn btn-sm btn-dark">
                            <i class="bi bi-ticket-perforated"></i>
                            részletek, jegyvásárlás
                        </a>
                    </div>

                </div>
            {% endfor %}


            <p>========</p>

            {{ content|raw }}

            <p>========</p>

            <div class="row row-cols-1 row-cols-md-2 g-4">
                {% for event in events %}
                    <div class="col">
                        <div class="card">
                            <img src="{{ event.imageUrl }}" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">{{ event.title }}</h5>
                                <p class="card-text"><i class="bi bi-clock"></i> {{ event.startAt|date('Y.m.d. H:i') }}</p>
                            </div>
                            <div class="card-footer text-center">
                                <a href="{{ event.slug }}" class="btn btn-dark">
                                    <i class="bi bi-ticket-perforated"></i>
                                    részletek, jegyvásárlás
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

        {% endif %}

    </div>

{% endblock %}
