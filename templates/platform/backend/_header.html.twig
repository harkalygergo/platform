<header class="p-0 mb-0 border-bottom bg-dark text-light">
    <div class="container-fluid d-flex flex-wrap align-items-center justify-content-between p-0 m-0">
        <button id="header_toggle_icon" class="btn d-none btn-sm border-orange bg-orange text-white" data-section="projects" title="Projects" onclick="sidebarToggle()">
            <span class="p-0 m-0">⫹⫺</span>
        </button>
        <form class="col-12 col-lg-auto" role="search">
            <div class="input-group">
                <label for="header_search" class="input-group-text bg-dark text-white border-0" id="basic-addon1">
                    <i class="bi bi-search"></i>
                </label>
                <input id="header_search" type="search" class="form-control bg-dark text-white border-0" placeholder="Search..." aria-label="Search" aria-describedby="basic-addon1">
            </div>
        </form>
        <div class="d-flex flex-wrap">
            <div class="dropdown text-end"><a href="#"
