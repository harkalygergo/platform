                                <table class="table table-sm">
                                    <tbody>
                                    <tr>
                                        <td class="text-nowrap">domain webmail</td>
                                        <td><strong>webmail.<code>domain.tld</code></strong></td>
                                    </tr>
                                    <tr>
                                        <td class="text-nowrap">globális webmail</td>
                                        <td><strong><a target="_blank" href="//webmail.brandcomstudio.com">webmail.brandcomstudio.com</a></strong></td>
