{% extends 'platform/base.html.twig' %}

{% block main %}

    <main class="p-1">
        <div class="mx-3 my-4">
            <h1 class="fw-bold fs-3">
                <i class="bi bi-person-badge mx-3"></i> Felhasználói dokumentáció
            </h1>
            <hr>




            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link text-dark active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true"><i class="bi bi-envelope mx-1"></i> E-mail</button>
                </li>
                <li class="nav-item" role="presentation">
