                            <p class="small mt-5"><a class="text-white-50" href="{{ path('reset_password') }}">{{ 'account.reset password'|trans }}</a></p>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        function togglePasswordInputType()
        {
            let passwordInput = document.querySelector('[data-login-target="password"]');
            let type = passwordInput.getAttribute('type');

            if (type === 'password') {
                passwordInput.setAttribute('type', 'text');
            } else {
                passwordInput.setAttribute('type', 'password');
            }
        }

    </script>
