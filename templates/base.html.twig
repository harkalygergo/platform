    <style>
        label.required:after {
            content: " * ";
            color: red;
        }
        /*
        .form-control:invalid:not(textarea) {
            border-color: red;
        }
         */
        .form-control.required:valid:not(textarea) {
            border-color: green;
        }
    </style>

    {% block stylesheets %}
    {% endblock %}

    {% block head %}{% endblock %}

    {#% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %#}

</head>
<body class="{% if app.user is null %}bg-dark{% else %}bg-light{% endif %}">
