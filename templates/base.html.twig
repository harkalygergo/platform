{% if app.user is defined and app.user is not null %}
    {% set cart = app.user.cart %}
{% endif %}

{% if app.user is defined and app.user is not null %}
    {% set currentInstance = app.request.cookies.get('currentInstance') %}
    {% for userInstance in app.user.instances %}
        {% if userInstance.id == app.request.cookies.get('currentInstance') %}
            {% set currentInstance = userInstance %}
        {% endif %}
    {% endfor %}
{% endif %}

<!DOCTYPE html>
<html lang="{{ app.request.locale }}" data-bs-theme="{% if app.user is null %}dark{% else %}auto{% endif %}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
        <meta name="robots" content="noindex,nofollow">

        <title>{% block title %}PLATFORM{% endblock %}</title>

        <link rel="shortcut icon" href="/favicon.png">
        <link rel="stylesheet" type="text/css" href="https://cdn.brandcomstudio.com/vendor/twbs/bootstrap/dist/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="https://cdn.brandcomstudio.com/vendor/twbs/bootstrap-icons/font/bootstrap-icons.min.css">

        {% block stylesheets %}
        {% endblock %}

        {% block head %}{% endblock %}

        {#% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %#}

    </head>
    <body class="{% if app.user is null %}bg-dark{% else %}bg-light{% endif %}">
        {% block body %}{% endblock %}

        {% block footer %}{% endblock %}

        {% block javascripts %}
            <script src="https://cdn.brandcomstudio.com/vendor/twbs/bootstrap/dist/js/bootstrap.min.js"></script>
            <script src="https://cdn.brandcomstudio.com/vendor/twbs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        {% endblock %}
    </body>
</html>
